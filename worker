# INIT
#-------------------------------------------------------------------
baseDir=$(pwd)
. "$baseDir"/src/inc/functions.sh
#-------------------------------------------------------------------
# GET ARGS
#-------------------------------------------------------------------
f=${1:-"cleanup"}

case $f in
    defaults)
        if [[ ! -f "$DEF" ]] && [[ -f "$DIS" ]]; then cp "$DIS" "$DEF";
        elif [[ -f "$DEF" && -f "$DIS" ]]; then rm -f "$DEF"; cp "$DIS" "$DEF"; fi
        ;;
    *)
        if [[ -d /root/.ispc ]]; then rm -f /root/.ispc/logs/*; fi
        if [[ -d cfg ]]; then rm -f cfg/.ipv* cfg/.reg*; fi
        ;;
esac
