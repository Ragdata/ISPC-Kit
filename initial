#-------------------------------------------------------------------
# INIT
#-------------------------------------------------------------------
baseDir=$PWD
. "$baseDir"/src/inc/functions.sh
#-------------------------------------------------------------------
# GET ARGS
#-------------------------------------------------------------------
if [[ $# ]]; then
    if [[ $# -ge 1 ]] && [[ $1 =~ $isLoc ]]; then REGISTRY[LOC]=$1; shift "$@"; fi
else
    REGISTRY[LOC]=${DEFAULTS[LOC]}
fi
if [[ $# ]] && [[ $1 =~ $isFlag ]]; then
    case $1 in
        "-h"|"-help")   flag="help";;
        "-t"|"-test")   flag="test";;
    esac
fi
#-------------------------------------------------------------------
# MAIN
#-------------------------------------------------------------------
clear
# display help file?
if [[ $flag == "help" ]]; then cat "$docsDir"/.helpinit; exit 0; fi
# check if system initialised
if [ -n "${REGISTRY[INIT]}" ]; then errorExit "ERROR: System is already initialised!"; fi
# initalise system
loadSource "$libDir/init"
checkSWAP
REGISTRY[INIT]=1
sleepRegistry
if ! reboot; then errorExit "ERROR: Unable to reboot system - system requires reboot before continuing!"; fi
